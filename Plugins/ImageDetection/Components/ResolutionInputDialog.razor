@using ImageDetection.Models
@using MultiShock.PluginSdk.Components

@if (IsVisible)
{
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm z-[1000] flex items-center justify-center p-5">
        <div class="bg-zinc-800 border border-zinc-700 rounded-xl max-w-[500px] w-full shadow-2xl">
            <div class="px-5 py-5 border-b border-zinc-700">
                <h4 class="m-0 mb-1 text-xl font-semibold">Set Image Resolution</h4>
                <p class="m-0 text-sm text-zinc-400">This helps the detector match the image correctly</p>
            </div>
            
            <div class="px-5 py-5 flex flex-col gap-5">
                <div class="flex gap-3 p-3 bg-blue-500/10 border border-blue-500/30 rounded-lg">
                    <svg class="w-5 h-5 text-blue-500 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p class="m-0 text-sm text-zinc-200">
                        What resolution was this image captured at? 
                        Template matching works best when detection resolution matches the upload resolution.
                    </p>
                </div>
                
                <div class="flex items-end gap-3">
                    <div class="flex-1 flex flex-col gap-1.5">
                        <label class="text-xs text-zinc-400 uppercase tracking-wider">Width (pixels)</label>
                        <TextInput Type="number" Min="1" Max="10000" @bind-Value="_widthString" />
                    </div>
                    
                    <span class="text-xl text-zinc-400 pb-2">&times;</span>
                    
                    <div class="flex-1 flex flex-col gap-1.5">
                        <label class="text-xs text-zinc-400 uppercase tracking-wider">Height (pixels)</label>
                        <TextInput Type="number" Min="1" Max="10000" @bind-Value="_heightString" />
                    </div>
                </div>
                
                <div class="flex flex-col gap-2">
                    <span class="text-xs text-zinc-400">Quick presets:</span>
                    <div class="flex flex-wrap gap-2">
                        <Button Text="1080p" Size="xs" Variant="secondary" OnClick="() => SetPreset(1920, 1080)" />
                        <Button Text="1440p" Size="xs" Variant="secondary" OnClick="() => SetPreset(2560, 1440)" />
                        <Button Text="4K" Size="xs" Variant="secondary" OnClick="() => SetPreset(3840, 2160)" />
                        <Button Text="720p" Size="xs" Variant="secondary" OnClick="() => SetPreset(1280, 720)" />
                        <Button Text="Current Monitor" Size="xs" Variant="secondary" OnClick="UseCurrentMonitor" />
                    </div>
                </div>
                
                @if (ShowWarning)
                {
                    <div class="flex gap-3 p-3 bg-amber-500/10 border border-amber-500/30 rounded-lg">
                        <svg class="w-5 h-5 text-amber-500 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <p class="m-0 text-sm text-zinc-200">
                            <strong>Resolution mismatch:</strong> This image was captured at @Width&times;@Height 
                            but your current monitor is @CurrentMonitorResolution. 
                            Detection may not work accurately unless you resize the image or adjust your monitor resolution.
                        </p>
                    </div>
                }
            </div>
            
            <div class="flex justify-end gap-3 px-5 py-4 border-t border-zinc-700 bg-zinc-800">
                <Button Text="Cancel" Variant="ghost" OnClick="Cancel" />
                <Button Text="Upload with this Resolution" Variant="primary" OnClick="Confirm" />
            </div>
        </div>
    </div>
}

@code {
    private int Width { get; set; } = 1920;
    private int Height { get; set; } = 1080;
    private string _widthString 
    { 
        get => Width.ToString(); 
        set { if (int.TryParse(value, out var w)) Width = w; }
    }
    private string _heightString 
    { 
        get => Height.ToString(); 
        set { if (int.TryParse(value, out var h)) Height = h; }
    }

    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public Resolution? DefaultResolution { get; set; }

    [Parameter]
    public Resolution? CurrentMonitorResolution { get; set; }

    [Parameter]
    public EventCallback<Resolution> OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private bool ShowWarning => 
        CurrentMonitorResolution != null && 
        (Width != CurrentMonitorResolution.Width || Height != CurrentMonitorResolution.Height);

    protected override void OnParametersSet()
    {
        if (DefaultResolution != null)
        {
            Width = DefaultResolution.Width;
            Height = DefaultResolution.Height;
        }
        else if (CurrentMonitorResolution != null)
        {
            Width = CurrentMonitorResolution.Width;
            Height = CurrentMonitorResolution.Height;
        }
    }

    private void SetPreset(int width, int height)
    {
        Width = width;
        Height = height;
    }

    private void UseCurrentMonitor()
    {
        if (CurrentMonitorResolution != null)
        {
            Width = CurrentMonitorResolution.Width;
            Height = CurrentMonitorResolution.Height;
        }
    }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync(new Resolution(Width, Height));
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }
}
